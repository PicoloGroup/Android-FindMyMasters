<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".AppUI.UIPages.ProgramDetailsPageActivity">

    <Button
        android:id="@+id/ProgramDetailsPage_applyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/red_rounded_corner"
        android:drawableBottom="@drawable/ic_apply"
        android:fontFamily="@font/roboto"
        android:text="@string/programDetailsPage_applyButton"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/ProgramDetailsPage_selectButton"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/ProgramDetailsPage_selectButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/red_rounded_corner"
        android:drawableBottom="@drawable/ic_select"
        android:fontFamily="@font/roboto"
        android:text="Select"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left" />

    <TextView
        android:id="@+id/programDetailsPage_countryNameText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:text="@string/programDetailsPage_countryNameText"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:drawableStartCompat="@drawable/ic_country" />

    <TextView
        android:id="@+id/programDetailsPage_cityNameText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:text="@string/programDetailsPage_cityNameText"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:drawableStartCompat="@drawable/ic_location"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="221dp" />

    <TextView
        android:id="@+id/programDetailsPage_languageField"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:importantForAutofill="no"
        android:paddingHorizontal="16dp"
        android:paddingVertical="2dp"
        android:drawablePadding="8dp"
        android:text="@string/programDetailsPage_languageField"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#818181"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_language"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toStartOf="@+id/programDetailsPage_deadlineField"
        app:layout_constraintTop_toBottomOf="@+id/programDetailsPage_tuitionField"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/programDetailsPage_deadlineField"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:importantForAutofill="no"
        android:paddingHorizontal="16dp"
        android:paddingVertical="2dp"
        android:drawablePadding="8dp"
        android:text="@string/programDetailsPage_deadlineField"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#818181"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_calendar"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/programDetailsPage_durationField"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/programDetailsPage_tuitionField"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:importantForAutofill="no"
        android:paddingHorizontal="16dp"
        android:paddingVertical="2dp"
        android:drawablePadding="8dp"
        android:text="@string/programDetailsPage_tuitionField"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#818181"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_money"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="@+id/programDetailsPage_durationField"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />


    <TextView
        android:id="@+id/ProgramDetailsPage_universityNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:text="Koc University"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProgramDetailsPage_programNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Robotics"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/ProgramDetailsPage_universityNameText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/programDetailsPage_durationField"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto"
        android:importantForAutofill="no"
        android:paddingVertical="2dp"
        android:paddingHorizontal="16dp"
        android:drawablePadding="8dp"
        android:text="@string/programDetailsPage_durationField"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#818181"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_watch"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ProgramDetailsPage_cityDetailsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/red_rounded_corner"
        android:fontFamily="@font/roboto"
        android:text="@string/ProgramDetailsPage_cityDetailsButton"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="112dp" />

    <TextView
        android:id="@+id/ProgramDetailsPage_academicRequirementsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="@string/ProgramDetailsPage_academicRequirementsText"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/ProgramDetailsPage_cityDetailsButton" />

    <TextView
        android:id="@+id/ProgramDetailsPage_listOfAcademicRequirementsText"
        android:layout_width="299dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:text="@string/ProgramDetailsPage_listOfAcademicRequirementsText"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/ProgramDetailsPage_academicRequirementsText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorClearRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
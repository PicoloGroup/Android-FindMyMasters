<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".AppUI.UIPages.CityDetailsPageActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/CityDetailsPage_cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:text="APPLY"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/footer_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorClearRed"
        tools:ignore="MissingConstraints" />

    <TextView
                android:id="@+id/ApplyPage_studentLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14sp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="12sp"
                android:background="@drawable/red_rounded_corner"
                android:text="STUDENT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorClearWhite"/>


            <TextView
                android:id="@+id/ApplyPage_studentNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="12sp"
                android:text="NAME"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/ApplyPage_studentNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="Enter Name Here"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ApplyPage_studentGenderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="12sp"
                android:text="GENDER"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>


            <EditText
                android:id="@+id/ApplyPage_studentGenderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="M/F/U"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ApplyPage_studentBirthdayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="12sp"
                android:text="BIRTHDAY"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/ApplyPage_studentBirthdayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="1 Jan 2000"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ApplyPage_studentSocialSecurityNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="12sp"
                android:textSize="14sp"
                android:text="SOCIAL SECURITY NUMBER"
                android:textColor="@color/colorTransparentBlack"/>

            <EditText
                android:id="@+id/ApplyPage_studentSocialSecurityNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="Enter SSN Here"
                android:inputType="number"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp" />


    <View
        android:id="@+id/footer_line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorClearRed"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints" />


    <TextView
                android:id="@+id/ApplyPage_programLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="12sp"
        android:background="@drawable/red_rounded_corner"
                android:text="PROGRAM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorClearWhite"/>

            <TextView
                android:id="@+id/ApplyPage_universityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="12sp"
                android:text="UNIVERSITY"
                android:textSize="14sp"
                android:textColor="@color/colorTransparentBlack"/>

            <EditText
                android:id="@+id/ApplyPage_universityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="Enter University Here"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ApplyPage_programText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="12sp"
                android:text="PROGRAM"
                android:textSize="14sp"
                android:textColor="@color/colorTransparentBlack"/>

            <EditText
                android:id="@+id/ApplyPage_programEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corner"
                android:hint="Enter Program Here"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#818181"
                android:textSize="20sp"/>

    <Button
        android:id="@+id/ApplyPage_submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/red_rounded_corner"
        android:fontFamily="sans-serif-black"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorClearWhite"
        android:textSize="20sp"/>

        </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/colorMainBackground"
    tools:context=".AppUI.UIPages.MainPageActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorClearWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/MainPage_exploreButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorClearWhite"
            android:textColor="@color/colorHint"
            android:text="@string/MainPage_exploreText"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/ic_explore"/>

        <Button
            android:id="@+id/MainPage_findButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorClearWhite"
            android:textColor="@color/colorHint"
            android:drawableTop="@drawable/ic_find"
            android:layout_marginTop="8dp"
            android:text="FIND" />

        <Button
            android:id="@+id/MainPage_decideButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorClearWhite"
            android:textColor="@color/colorHint"
            android:drawableTop="@drawable/ic_compare"
            android:layout_marginTop="8dp"

            android:text="DECIDE" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
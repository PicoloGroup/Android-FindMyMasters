<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.findmymaster">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round1"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".AppUI.UIPages.ProfilePageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.Fragment.ExploreFragment"
            android:exported="false" />
        <activity
            android:name=".AppUI.Fragment.DecideFragment"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.ApplyPageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.CityDetailsPageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.ProgramDetailsPageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.MainPageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.RegistrationPageActivity"
            android:exported="false" />
        <activity
            android:name=".AppUI.UIPages.LoginPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>